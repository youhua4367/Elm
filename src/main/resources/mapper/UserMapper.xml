<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.elm_m.Mapper.UserMapper">


    <update id="update" parameterType="com.example.elm_m.Entity.User">
        update user
        <set>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="userName != null">
                userName = #{userName},
            </if>
            <if test="userSex != null">
                userSex = #{userSex},
            </if>
            <if test="userImg != null">
                userImg = #{userImg},
            </if>
        </set>
        where userId = #{userId}
    </update>
</mapper>